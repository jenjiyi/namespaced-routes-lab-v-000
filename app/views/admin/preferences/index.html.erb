<h1>Preferences!!!!</h1>
<%= form_for @preferences, url: admin_preference_path(@preferences)  do |f| %>
<p> <%= f.label :artist_sort_order %>:<br>
    Descending <%= f.radio_button :artist_sort_order, "DESC" %> or
    Ascending <%= f.radio_button :artist_sort_order, "ASC" %>
    </p>
    <p> <%= f.label :song_sort_order %>:<br>
    Descending <%= f.radio_button :song_sort_order, "DESC" %> or 
    Ascending <%= f.radio_button :song_sort_order, "ASC" %>
    </p>
    <p>
    <%= f.label :allow_create_songs %><br>
    True: <%= f.radio_button :allow_create_songs, true %>
    False: <%= f.radio_button :allow_create_songs, false %>
  </p>
  <p>
    <%= f.label :allow_create_artists %><br>
    True: <%= f.radio_button :allow_create_artists, true %>
    False: <%= f.radio_button :allow_create_artists, false %>
  </p>
  <p><%= f.submit%></p>
<%end%>